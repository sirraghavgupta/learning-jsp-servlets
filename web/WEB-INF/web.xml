<!--    this is the way to specify servlet context. its common for all servlets.-->
<!--    it mey be used to store some common info like the file path or the database path etc.-->

    <context-param>
        <param-name>name</param-name>
        <param-value>Raghav</param-value>
    </context-param>

    <context-param>
        <param-name>phone</param-name>
        <param-value>Samsung</param-value>
    </context-param>

    <servlet>
        <servlet-name>ExceptionDemoJsp</servlet-name>
        <jsp-file>/ExceptionHandlingDemo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ExceptionDemoJsp</servlet-name>
        <url-pattern>/exception-demo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FilterDemoJsp</servlet-name>
        <jsp-file>/FilterDemoForm.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilterDemoJsp</servlet-name>
        <url-pattern>/filter-demo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginJsp</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginJsp</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WelcomeJsp</servlet-name>
        <jsp-file>/welcome.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeJsp</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Videos</servlet-name>
        <jsp-file>/videos.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Videos</servlet-name>
        <url-pattern>/videos</url-pattern>
    </servlet-mapping>

</web-app>